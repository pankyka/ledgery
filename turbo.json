{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "BASE_URL",
        "AUTH_SECRET"
      ]
    },
    "publish": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}
